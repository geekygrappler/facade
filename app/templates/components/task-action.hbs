{{#if isDocumentUpload}}
  <h4>Upload Documents</h4>
  {{#file-dropzone
    class="dropzone"
    data-test-document-upload=true
    ondrop=(perform onDrop)
    name="documents" as |dropzone queue|
  }}
    {{#if dropzone.active}}
      {{#if dropzone.valid}}
        Drop to upload
      {{else}}
        Invalid
      {{/if}}
    {{else if queue.files.length}}
      Uploading {{queue.files.length}} files. ({{queue.progress}}%)
    {{else}}
      <p>
        {{#if dropzone.supported}}
          Drag and drop files onto this area to upload them or
        {{/if}}
        {{#file-upload name="documents"
          for="documents"
          accept="image/*"
          multiple=true
          onfileadd=(perform onFileAdd)
        }}
          <a tabindex=0>Upload Documents</a>
        {{/file-upload}}
      </p>
    {{/if}}
  {{/file-dropzone}}
{{/if}}
{{#if isDataEntry}}
  <p data-test-data-entry>Place holder</p>
{{/if}}

{{yield}}