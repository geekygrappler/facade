{{#if action.isDocumentUpload}}
  {{#if action.documents}}
    {{#each action.documents as |document|}}
      <p data-test-document-download>
        {{document.name}} -
        <a href={{document.url}}>Download now</a>
      </p>
    {{/each}}
  {{else}}
    {{#if isBuyer}}
      {{task-action
        action=action
        onFileAdd=uploadDocument
        onDrop=multipleDocumentUpload
        data-test-document-upload-component=true
      }}
    {{else}}
      <p data-test-document-upload-component-solicitor-message>Awaiting buyer to upload documents</p>
    {{/if}}
  {{/if}}
{{/if}}

{{yield}}